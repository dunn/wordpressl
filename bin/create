#!/usr/bin/env bash

#
# Functions
#
run_cmd() {
  local cmd
  cmd="$*"
  echo "$(tput bold)==> $*$(tput sgr0)"
  eval "$cmd"

  export EXIT_STATUS=$?

  if [ "$EXIT_STATUS" != "0" ]; then
    echo "$(tput setaf 124)Failed ($EXIT_STATUS):$(tput sgr0) $cmd"
  fi
}

write_savepoint() {
  cat <<EOF
#!/bin/bash
export DEPLOY_PASS='$DEPLOY_PASS'
export EMAIL='$EMAIL'
export IDENTITY='$IDENTITY'
export ROOT_DB_PASS='$ROOT_DB_PASS'
export ROOT_PASS='$ROOT_PASS'
export SERVER='$SERVER'
export WP_ADMIN_PASS='$WP_ADMIN_PASS'
export WP_DB_PASS='$WP_DB_PASS'
EOF
}

write_hosts() {
  cat <<EOF
[centos]
wp ansible_ssh_host=$SERVER
EOF
}

write_conf() {
cat <<EOF
[defaults]
private_key_file=$IDENTITY
host_key_checking = False
control_path = %(directory)s/%%h-%%r
inventory = $(pwd)/hosts

[ssh_connection]
scp_if_ssh=True
EOF
}

NOW="$(date "+%Y-%m-%d-%H%M%S")"
export NOW

# If they pass a config file from a previous try
if [ -f "$1" ]; then
  # shellcheck source=/dev/null
  . "$1"
else
  #
  # Set/export variables
  #
  ANSIBLE_CONFIG="$(pwd)/ansible.cfg"
  export ANSIBLE_CONFIG

  echo -n "Set SERVER: "
  read -r SERVER
  echo "Setting SERVER to '$SERVER'"
  export SERVER

  echo -n "Specify path to identity file (default ~/.ssh/id_rsa): "
  read -r -e IDENTITY
  IDENTITY=${IDENTITY:-"$HOME/.ssh/id_rsa"}
  export IDENTITY

  echo -n "Enter an email address for the server and WP admin: "
  read -r EMAIL
  export EMAIL

  echo
  echo -n "Enter crypted password for the root user: "
  read -r -s ROOT_PASS
  export ROOT_PASS

  echo
  echo -n "Enter crypted password for the 'deploy' user: "
  read -r -s DEPLOY_PASS
  export DEPLOY_PASS

  echo
  echo -n "Enter password for MariaDB root user: "
  read -r -s ROOT_DB_PASS
  export ROOT_DB_PASS

  echo
  echo -n "Enter password for MariaDB wordpress user: "
  read -r -s WP_DB_PASS
  export WP_DB_PASS

  echo
  echo -n "Enter password for WordPress admin user: "
  read -r -s WP_ADMIN_PASS
  export WP_ADMIN_PASS
  echo

  write_savepoint > "config-$NOW.cfg"
  chmod 600 "config-$NOW.cfg"
fi

write_hosts > hosts
write_conf > ansible.cfg
run_cmd "ansible-playbook main.yml -vv -u root"
if [ "$EXIT_STATUS" == "0" ]; then
  rm -f config-*.cfg
  echo "Provisioning complete."
else
  echo
  echo "$(tput bold)==> Configuration saved to $(ls config-* | tr -d '\n')$(tput sgr0)"
  echo 'Re-run with `bin/create'" $(ls config-* | tr -d '\n')"'`'", or delete it NOW."
  echo
fi
